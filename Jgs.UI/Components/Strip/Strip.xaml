<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Jgs.UI.Components">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Jgs.UI;component/Themes/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="{x:Type c:Strip}">
        <Setter Property="Width" Value="320"/>
        <Setter Property="Height" Value="180"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:Strip}">
                    <Border BorderBrush="Green"
                            BorderThickness="1">
                        <Rectangle Stretch="Fill"
                                   StrokeThickness="1"
                                   Stroke="Black">
                            <Rectangle.Fill>
                                <ImageBrush x:Name="PART_Image"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>